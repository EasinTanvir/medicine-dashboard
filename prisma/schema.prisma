
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  customerName    String
  customerPhone   String?     // optional
  customerAddress String?     // optional
  medicines       Medicine[]  // relation
  createdAt       DateTime    @default(now())
}

model Medicine {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  medicineName String
  quantity     Int       @default(1)
  customerId   String    @db.ObjectId
  companyId    String?   @db.ObjectId         // optional (some medicines might not belong to a company)

  // Relations
  customer     Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)
  company      Company?  @relation(fields: [companyId], references: [id])

  createdAt    DateTime  @default(now())
}

model Company {
  id                   String      @id @default(auto()) @map("_id") @db.ObjectId
  companyName          String
  address              String?          // optional
  representativeName   String?          // optional
  representativePhone  String?          // optional
  medicines            Medicine[]       // one-to-many relation
  createdAt            DateTime         @default(now())
}